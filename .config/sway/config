### Variables
#
set $alt Mod1
set $mod Mod4
set $left p
set $down o
set $up i
set $right n
set $term 'st'
set $altTerm 'alacritty'
set $menu 'dmenu_history -h 25'
set $bg #282828

include ~/.config/sway/config.d/*.conf

# This will start my script
exec --no-startup-id ~/.config/sway/autostart.sh

font pango:FantasqueSansMono Nerd Font 12

exec swayidle -w \
         timeout 300 'swaylock -f -c 282828' \
         timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
         before-sleep 'swaylock -f -c 282828 -l' 

default_border pixel
client.focused          #282828 #ffffff #282828 #282828
client.focused_inactive $bg     #282828 #ffffff $bg   $bg
client.unfocused        $bg     #282828 $bg     $bg   $bg
floating_modifier $mod normal
hide_edge_borders smart
for_window [class="."] inhibit_idle fullscreen
for_window [app_id="."] inhibit_idle fullscreen

include @sysconfdir@/sway/config.d/*
