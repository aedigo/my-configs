### Variables
#
set $alt Mod1
set $mod Mod4
set $left p
set $down o
set $up i
set $right n
set $term 'st'
set $altTerm 'alacritty'
set $menu "bemenu-run -H 25 --fb '#282828' --tb '#282828' --tf '#fbf1c7' --ff '#fbf1c7' --nb '#282828' -i"

set $bg #282828
set $fg #fbf1c7

include ~/.config/sway/config.d/*.conf

# This will start my script
exec ~/.config/sway/autostart.sh
exec autotiling

font pango:FantasqueSansMono Nerd Font 12

exec swayidle -w \
         timeout 300 'swaylock -f -c 282828' \
         timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
         before-sleep 'swaylock -f -c 282828 -l' 

default_border pixel 1
default_floating_border pixel 5
client.focused          $fg     $fg     $fg     $fg   $fg
client.focused_inactive $bg     $fg     $bg     $bg   $bg
client.unfocused        $bg     $bg     $bg     $bg   $bg
floating_modifier $mod normal
hide_edge_borders smart
for_window [class="."] inhibit_idle fullscreen
for_window [app_id="."] inhibit_idle fullscreen
smart_gaps on
gaps inner 20
smart_borders on

include @sysconfdir@/sway/config.d/*
