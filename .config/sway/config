### Variables
#
set $alt Mod1
set $mod Mod4
set $left p
set $down o
set $up i
set $right n
set $term 'alacritty'
set $altTerm 'st'
set $menu "rofi -show run"

set $bg #282828
set $fg #fbf1c7

seat * hide_cursor 3000
include ~/.config/sway/config.d/*.conf

# This will start my script
exec ~/.config/sway/autostart.sh
exec autotiling

font pango:FantasqueSansMono Nerd Font 12

exec swayidle -w \
         timeout 300 'swaylock -f -c 282828; safeeyes -d' \
         timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on; safeeyes -e"' \
         before-sleep 'swaylock -f -c 282828 -l' 

exec swayidle -w \
        timeout 100 'safeeyes -d' resume 'safeeyes -e'

exec swayidle -w \
        timeout 1800 'systemctl hibernate'

default_border pixel 1
client.focused          $fg     $fg     $fg     $fg   $fg
client.focused_inactive $bg     $fg     $bg     $bg   $bg
client.unfocused        $bg     $bg     $bg     $bg   $bg
floating_modifier $mod normal
bindsym $mod+Control+space floating toggle
hide_edge_borders smart
for_window [class="."] inhibit_idle fullscreen
for_window [app_id="."] inhibit_idle fullscreen
smart_gaps on
gaps inner 20
smart_borders on

include @sysconfdir@/sway/config.d/*
